#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include <sleep.h>
#include <stdio.h>
#include <stdint.h>

#define A 	0x43C00000
#define B 	0x43C00001

uint16_t imp_resp[] = {1, 2, 3, 4, 5, 6, 7, 8};
uint8_t x, y, valid_out;
#define RST 9
#define VALID_IN 8
#define VALID_OUT 18

uint32_t prev[8];
uint32_t expected;
int main()
{
    init_platform();

    xil_printf("Starting...\n\r");
    // Init prev values to zero
    for(int i = 0; i < 8; i++){
		prev[i] = 0;
	}

    *(uint32_t*) A = 1 << RST;
    usleep(1000000);
    while(1){
    	// Shift values
    	for(int i = 1; i < 8; i++){
    		prev[i-1] = prev[i];
    	}
    	x = 1;
    	prev[7] = x;


    	// Send next input
		*(uint32_t*) A = (1 << VALID_IN) | x;
    	usleep(1000);
    	*(uint32_t*) A = x;	// Drop valid_in

    	xil_printf("Sent %d\n\r", x);

    	// Wait till valid_out = 1
    	valid_out = *(uint32_t*) B >> VALID_OUT;
    	while(!valid_out){
    		valid_out = *(uint32_t*) B >> VALID_OUT;
    	}
    	y = *(uint32_t*) B & 0x1ff;

    	// Calculate expected value
    	expected = 0;
    	for(int i = 0; i < 8; i++){
    		expected += imp_resp[i]*prev[7 - i];
    	}
    	xil_printf("Received %d and expected %d\n\r", (int)y, (int)expected);
    	usleep(2000000);
    }

    cleanup_platform();
    return 0;
}
